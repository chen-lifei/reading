.content .bookshelf {
  display: flex;
  align-items: flex-end;
  height: 600px;
  width: 1200px;
  border: 20px solid #562c1a;
  margin: 0 auto;
  cursor: pointer;
}
.content .bookshelf .book {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 60px;
  height: 600px;
  border: 1px solid #333;
  border-radius: 8px;
  background: url(../../assets/book_cover.png);
}
.content .bookshelf .book .name {
  width: 30px;
  font-size: 30px;
  text-align: center;
  margin: 0 auto;
  line-height: 60px;
  padding-bottom: 10px;
}
.content .bookshelf .book .author {
  width: 14px;
  font-size: 14px;
  margin: 0 auto;
}
.content .bookshelf .book:nth-child(n+8) {
  height: 500px;
}
.content .bookshelf .book:nth-child(n+16) {
  height: 400px;
  border-radius: 6px;
}
.content .bookshelf .book:hover {
  transform: rotate(1deg);
}
.recommend {
  margin: 0 50px;
}
.recommend .recommend_books {
  display: flex;
}
.recommend .recommend_books .book {
  width: 20%;
  margin: 0 20px;
  text-align: center;
  cursor: pointer;
}
.recommend .recommend_books .book .img {
  height: 250px;
  margin-bottom: 5px;
}
.recommend .recommend_books .book .img img {
  width: 100%;
  height: 100%;
}
.recommend .recommend_books .book .author {
  font-size: 12px;
  color: #a3bdec;
}
.new {
  margin: 0 50px;
}
.new .new_books {
  display: flex;
}
.new .new_books .book {
  position: relative;
  width: 20%;
  height: 250px;
  margin: 0 20px;
  text-align: center;
  cursor: pointer;
  overflow: hidden;
}
.new .new_books .book .img {
  height: 250px;
  margin-bottom: 5px;
}
.new .new_books .book .img img {
  width: 100%;
  height: 100%;
}
.new .new_books .book .name {
  position: absolute;
  bottom: 40px;
  left: 10px;
  transition: all 0.4s ease-in-out;
  transform: translateY(80px);
}
.new .new_books .book .author {
  position: absolute;
  bottom: 20px;
  left: 10px;
  font-size: 12px;
  color: #a3bdec;
  transition: all 0.5s ease-in-out;
  transform: translateY(80px);
}
.new .new_books .book:hover .name,
.new .new_books .book:hover .author {
  display: inline-block;
  transform: translateY(0);
}
