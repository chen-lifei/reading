.category {
  margin: 20px 100px;
}
.category .sortBox {
  width: 100%;
  border-radius: 8px;
  padding: 40px;
  background-color: rgba(255, 255, 255, 0.5);
}
.category .sortBox .title {
  display: inline-block;
  padding: 6px 15px;
  margin-right: 30px;
  color: rgba(255, 255, 255, 0.9);
  border-radius: 16px 0 16px 16px;
  background-color: #7f7f8c;
}
.category .sortBox .region {
  margin-bottom: 20px;
}
.category .sortBox .masRegion {
  margin: 30px 0;
}
.category .sortBox .label {
  display: inline-block;
  margin: 0 10px 10px 0;
  color: #475669;
  cursor: pointer;
  padding: 4px 10px;
  transition: all .2s ease;
}
.category .sortBox .label:hover {
  color: #ff7648;
}
.category .sortBox .label:last-child {
  margin-right: 0;
}
.category .sortBox .active {
  border-radius: 16px;
  color: #ff7648;
  background-color: #f7eae8;
}
.category .categoryContent {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
  margin: 40px 0;
}
.category .categoryContent .contentBox {
  width: 18%;
  margin-bottom: 30px;
  cursor: pointer;
  border-radius: 8px;
}
.category .categoryContent .contentBox .all {
  position: relative;
  width: 100%;
}
.category .categoryContent .contentBox .all img {
  width: 100%;
  height: 250px;
  border-radius: 8px;
  object-fit: cover;
  box-shadow: 0px 5px 5px rgba(31, 45, 61, 0.4);
}
.category .categoryContent .contentBox .all .mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 8px;
  opacity: 0;
  z-index: 8;
  transition: all .2s ease;
  background-color: #ffffff;
}
.category .categoryContent .contentBox .all .mask:hover {
  transform: translateY(15px) scale(1.2);
  opacity: 1;
  box-shadow: 0px 10px 20px rgba(31, 45, 61, 0.4);
}
.category .categoryContent .contentBox .all .mask img {
  width: 100%;
  height: 50%;
  border-radius: 8px 8px 0 0;
  box-shadow: none;
  object-fit: cover;
}
.category .categoryContent .contentBox .all .mask .info {
  padding: 5px 10px;
}
.category .categoryContent .contentBox .all .mask .info a {
  color: #000000;
}
.category .categoryContent .contentBox .all .mask .info .infoName {
  -webkit-line-clamp: 1;
  font-weight: 600;
  transition: all .2s ease;
}
.category .categoryContent .contentBox .all .mask .info .infoName:hover {
  color: #ff7648;
}
.category .categoryContent .contentBox .all .mask .info .intro {
  font-size: 12px;
  margin-top: 5px;
  color: #475669;
  -webkit-line-clamp: 5;
}
.category .categoryContent .contentBox .name {
  margin: 10px 0 0 5px;
  font-weight: 600;
  font-size: 16px;
  transition: all .2s ease;
}
.category .categoryContent .contentBox .name:hover {
  color: #ff7648;
}
.category .categoryContent .contentBox:nth-child(6n) {
  margin-right: 0;
}
.category .wordLimit {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
@media (max-width: 1350px) {
  .category {
    margin: 20px;
  }
}
@media (max-width: 1000px) {
  .category .categoryContent .contentBox {
    width: 22%;
  }
}
@media (max-width: 780px) {
  .category .sortBox {
    padding: 20px;
  }
  .category .sortBox .masRegion {
    margin: 15px 0;
  }
  .category .categoryContent .contentBox {
    width: 32%;
  }
}
@media (max-width: 600px) {
  .category .categoryContent .contentBox {
    width: 48%;
  }
}
