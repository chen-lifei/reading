.masterpieceContent {
  padding-top: 60px;
  width: 100%;
  height: auto;
  padding-bottom: 20px;
  overflow: hidden;
  background-color: #fbfbfb;
}
.masterpieceContent div {
  font-family: Graublau;
  font-size: 20px;
}
.masterpieceContent .homeContent .topContent {
  position: relative;
  width: 100%;
  height: auto;
}
.masterpieceContent .homeContent .topContent .title {
  position: absolute;
  top: 20%;
  left: 35%;
}
.masterpieceContent .homeContent .topContent .banner {
  width: 100%;
  object-fit: fill;
}
.masterpieceContent .homeContent .topContent .secondNav {
  position: absolute;
  right: 20px;
  bottom: 50px;
}
.masterpieceContent .homeContent .topContent .secondNav ul li {
  position: relative;
  float: left;
  font-weight: 600;
  font-size: 28px;
  list-style: none;
  width: 80px;
  height: 80px;
  margin-right: 50px;
  cursor: pointer;
}
.masterpieceContent .homeContent .topContent .secondNav ul li img {
  width: 100%;
  height: 100%;
  transition: all .4s ease;
}
.masterpieceContent .homeContent .topContent .secondNav ul li .text {
  position: absolute;
  width: 25px;
  top: -17px;
  left: calc(37.5%);
  font-size: 23px;
  transition: all .4s ease;
}
.masterpieceContent .homeContent .topContent .secondNav ul li:hover .text {
  left: calc(37.5px);
  top: 15px;
}
.masterpieceContent .homeContent .topContent .secondNav ul li:hover img {
  width: 100px;
  height: 100px;
}
.masterpieceContent .homeContent .recommend {
  position: relative;
  margin: 30px 80px;
}
.masterpieceContent .homeContent .recommend .title {
  position: relative;
  display: inline-block;
  cursor: default;
  padding: 10px 30px;
  border-left: 1px solid #acaca7;
  border-top: 1px solid #acaca7;
}
.masterpieceContent .homeContent .recommend .change {
  position: absolute;
  top: 0;
  right: 0;
  padding: 10px 30px;
  border-right: 1px solid #acaca7;
  border-top: 1px solid #acaca7;
  cursor: pointer;
}
.masterpieceContent .homeContent .recommend .recommendContent {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  color: #5c5c5c;
}
.masterpieceContent .homeContent .recommend .recommendContent .contentBox {
  display: flex;
  align-items: center;
  position: relative;
  width: 45%;
  margin-bottom: 30px;
  height: 250px;
  overflow: hidden;
  background-color: #ffffff;
  border-radius: 10px;
  box-shadow: 0px 5px 15px rgba(31, 45, 61, 0.4);
}
.masterpieceContent .homeContent .recommend .recommendContent .contentBox img {
  width: 25%;
  height: 200px;
  box-shadow: 0px 5px 10px rgba(31, 45, 61, 0.2);
  border-radius: 10px;
  object-fit: cover;
}
.masterpieceContent .homeContent .recommend .recommendContent .contentBox .detail {
  width: 50%;
  padding: 0 20px;
  border-right: 1px solid #e9e9e9;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6;
}
.masterpieceContent .homeContent .recommend .recommendContent .contentBox .info {
  width: 25%;
  text-align: center;
  padding: 0 5px;
}
.masterpieceContent .homeContent .recommend .recommendContent .contentBox .info .name {
  font-weight: 600;
  font-size: 24px;
  color: #181616;
}
.masterpieceContent .homeContent .recommend .recommendContent .contentBox .read {
  position: absolute;
  bottom: 20px;
  right: 20px;
  background-color: #e9e9e9;
  padding: 10px;
  border-radius: 8px;
  cursor: pointer;
  transition: all .4s ease;
}
.masterpieceContent .homeContent .recommend .recommendContent .contentBox .read:hover {
  background-color: plum;
}
.masterpieceContent .mt20 {
  margin-top: 20px;
}
@font-face {
  font-family: Graublau;
  src: url('../../assets/fonts/Graublau.ttf');
}
@media (max-width: 1000px) {
  .masterpieceContent .homeContent .title {
    display: none;
  }
}
