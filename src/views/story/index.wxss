.storyContent {
  background: url("../../assets/spring.png") top 60px right no-repeat fixed, #fffbf3;
  padding-top: 100px;
  width: 100%;
}
.storyContent .wrapper {
  max-width: 1200px;
  height: auto;
  margin: 0 auto;
}
.storyContent .wrapper .homeContent .topContent {
  display: flex;
  box-sizing: border-box;
}
.storyContent .wrapper .homeContent .topContent .banner {
  width: 70%;
  margin-right: 20px;
}
.storyContent .wrapper .homeContent .topContent .banner .el-carousel {
  border-radius: 10px;
}
.storyContent .wrapper .homeContent .topContent .rightContent {
  position: relative;
  width: 30%;
  height: 300px;
  perspective: 2000px;
  overflow: hidden;
  border-radius: 8px;
}
.storyContent .wrapper .homeContent .topContent .rightContent .title {
  color: #ff7648;
  margin-bottom: 10px;
  font-weight: 600;
  font-size: 14px;
}
.storyContent .wrapper .homeContent .topContent .rightContent .front,
.storyContent .wrapper .homeContent .topContent .rightContent .back {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 10px;
  font-size: 14px;
  backface-visibility: hidden;
  transition: all 0.6s ease-in;
  background-color: rgba(255, 194, 120, 0.4);
}
.storyContent .wrapper .homeContent .topContent .rightContent .front .quotes .quote {
  margin: 20px 0;
  letter-spacing: 1px;
}
.storyContent .wrapper .homeContent .topContent .rightContent .front .quotes .quote .source {
  float: right;
}
.storyContent .wrapper .homeContent .topContent .rightContent .back {
  transform: rotate3d(0, 1, 0, -180deg);
}
.storyContent .wrapper .homeContent .topContent .rightContent .back .info {
  letter-spacing: 1px;
}
.storyContent .wrapper .homeContent .topContent .rightContent .back .info div {
  margin: 5px 0;
}
.storyContent .wrapper .homeContent .topContent .rightContent .rotate {
  position: absolute;
  right: 10px;
  bottom: 10px;
  color: #00a1d6;
  cursor: pointer;
  font-size: 14px;
}
.storyContent .wrapper .homeContent .topContent .rotateToBack .front {
  transform: rotate3d(0, 1, 0, -180deg);
}
.storyContent .wrapper .homeContent .topContent .rotateToBack .back {
  transform: rotate3d(0, 1, 0, -360deg);
}
.storyContent .wrapper .homeContent .topContent .rotateToFront .front {
  transform: rotate3d(0, 1, 0, 0);
}
.storyContent .wrapper .homeContent .topContent .rotateToFront .back {
  transform: rotate3d(0, 1, 0, -180deg);
}
.storyContent .wrapper .homeContent .main .classical {
  margin: 20px 0;
}
.storyContent .wrapper .homeContent .main .classical .title {
  position: relative;
  width: 80px;
  height: 40px;
  color: #ffffff;
  background-color: #ff7648;
  border-radius: 8px;
  overflow: hidden;
}
.storyContent .wrapper .homeContent .main .classical .title p {
  position: absolute;
  top: 12px;
  left: 10px;
  font-size: 14px;
  cursor: default;
}
.storyContent .wrapper .homeContent .main .classical .title::before {
  content: '';
  position: absolute;
  top: -14px;
  left: 24px;
  width: 20px;
  height: 20px;
  background-color: #ffc278;
  border-radius: 50%;
  transition: all ease .8s;
}
.storyContent .wrapper .homeContent .main .classical .title:hover::before {
  top: 0;
  left: 0;
  border-radius: 0;
  width: 100px;
  height: 50px;
}
.storyContent .wrapper .homeContent .main .classical .classicalContent {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
  margin: 20px 0;
}
.storyContent .wrapper .homeContent .main .classical .classicalContent .contentBox {
  position: relative;
  width: 18%;
  height: 270px;
  background-color: #ffffff;
  border-radius: 10px;
  box-shadow: 0 13px 15px rgba(31, 45, 61, 0.15);
  cursor: pointer;
  overflow: hidden;
  margin-bottom: 30px;
}
.storyContent .wrapper .homeContent .main .classical .classicalContent .contentBox img {
  width: 100%;
  height: 180px;
  object-fit: cover;
  border-radius: 10px 10px 0 0;
  transition: all .4s ease;
}
.storyContent .wrapper .homeContent .main .classical .classicalContent .contentBox .info {
  padding: 10px;
  transition: all .6s ease;
}
.storyContent .wrapper .homeContent .main .classical .classicalContent .contentBox .info .intro {
  margin-top: 5px;
  color: #475669;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.storyContent .wrapper .homeContent .main .classical .classicalContent .contentBox:hover img {
  height: 100%;
  border-radius: 10px;
}
.storyContent .wrapper .homeContent .main .classical .classicalContent .contentBox:hover .info {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.8);
}
.storyContent .wrapper .homeContent .main .classical .classicalContent .contentBox:hover .info .intro {
  -webkit-line-clamp: 10;
}
.storyContent .wrapper .homeContent .main .classical .moreClassical {
  text-align: right;
  color: #00a1d6;
  cursor: pointer;
}
.storyContent .wrapper .homeContent .main .recommend .title {
  position: relative;
  width: 80px;
  height: 40px;
  color: #ffffff;
  background-color: #bf98ff;
  border-radius: 8px;
  overflow: hidden;
}
.storyContent .wrapper .homeContent .main .recommend .title p {
  position: absolute;
  top: 12px;
  left: 10px;
  font-size: 14px;
  cursor: default;
}
.storyContent .wrapper .homeContent .main .recommend .title::before {
  content: '';
  position: absolute;
  top: -25px;
  left: 60px;
  width: 50px;
  height: 40px;
  background-color: #182a88;
  border-radius: 14px;
  transition: all ease .8s;
}
.storyContent .wrapper .homeContent .main .recommend .title:hover::before {
  top: 0;
  left: 0;
  border-radius: 0;
  width: 100px;
  height: 50px;
}
@media (max-width: 1000px) {
  .storyContent .wrapper .homeContent .rightContent .info,
  .storyContent .wrapper .homeContent .rightContent .quote {
    font-size: 10px;
  }
}
