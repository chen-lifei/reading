.content {
  display: flex;
  width: 100%;
  height: 100vh;
  background-color: papayawhip;
}
.content .bg {
  width: 50%;
}
.content .bg img {
  width: 60%;
  height: auto;
  margin: 50%;
  transform: translateX(-50%) translateY(-50%);
}
.content .info {
  width: 50%;
}
.content .info .infoBox {
  background-color: white;
  width: 350px;
  margin: 50%;
  transform: translateX(-50%) translateY(-50%);
  padding: 50px 40px;
  border: 1px solid #eee;
  box-shadow: 10px 5px 5px rgba(1, 1, 1, 0.1);
}
.content .info .infoBox .title {
  color: #666;
  margin-bottom: 40px;
  cursor: pointer;
}
.content .info .infoBox .title span {
  padding: 0 10px;
}
.content .info .infoBox .title span:first-child {
  padding-left: 0;
  border-right: 2px solid #000;
}
.content .info .infoBox .active {
  color: #000;
}
.content /deep/ .el-form--label-top .el-form-item__label {
  padding: 0;
  line-height: 0;
}
.content /deep/ .el-input__inner {
  border: none;
  border-bottom: 1px solid #DCDFE6;
  border-radius: 0;
  padding: 0;
}
