.content {
  width: 100%;
  height: 100vh;
  background: url(../../assets/elk.png);
  overflow: hidden;
}
.content .login {
  margin: 150px auto 0;
  padding: 0 20px;
  width: 300px;
  height: 350px;
  background-color: rgba(204, 204, 204, 0.5);
